ticker:
  source: coinmarketcap
  crypto: BTC
  fiat: USD
  template: simple

templates:
  simple: >
    {{ fiat.symbol }}/{{ crypto.symbol }}
    {{ "%.2f" | format(rate | float) }}
    ({{ "%.2f" | format(change | float) }}%)

  ansi: >
    {{ fiat.symbol }}/{{ crypto.symbol }}
    {{ "%.2f" | format(rate | float) }}
    {% if (change | float) > 0 %}{{ "\033[32m" }}{{ "%.2f" | format(change | float) }}%
    {% elif (change | float) < 0 %}{{ "\033[31m" }}{{ "%.2f" | format(change | float | abs) }}%
    {% endif %}{{ "\033[0m" }}

sources:
  coinmarketcap:
    url: https://api.coinmarketcap.com/v1/ticker/{{ crypto["api_path"] }}/?convert={{ fiat.symbol }}

    data:
      rate: >
        {{ json[0]["price_" + ( fiat.symbol | lower )] }}
      change: >
        {{ json[0]["percent_change_1h"] }}

    cryptos:
      BTC:
        api_path: bitcoin
      BCH:
        api_path: bitcoin-cash
      ETH:
        api_path: ethereum
      LTC:
        api_path: litecoin

      # CoinMarketCap supports many more cryptocurrencies.
      # Add them here, as required...

    fiats:
      CNY: {}
      EUR: {}
      GBP: {}
      USD: {}

      # CoinMarketCap supports many more fiat currencies.
      # Add them here, as required...
